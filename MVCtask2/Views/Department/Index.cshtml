@model List<Department>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">First Action</th>
      <th scope="col">Second Action</th>
    </tr>
  </thead>
  <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a href="/Department/Details/@item.Id" class="link-info">Details</a></td>
                <td><a href="/Department/Delete/@item.Id" class="link-info">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Department/Create" class="btn btn-info">Create New Department</a>